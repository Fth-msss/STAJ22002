@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css">
</head>
<body>

    <div class="container">
        <input class="input-searchbar" type="text" id="userInput" placeholder="real page here" oninput="handleInputChange()">
        <div class="btn-group">
            <button class="button-45" onclick="searchButtonClick()"><i class="bi bi-search"></i></button>
            <a href="@Url.Action("Yeniservis", "Home")" class="button-45"><i class="bi bi-file-earmark-plus"></i></a>
        </div>

        <p id="searchButton"></p>

    </div>



    <div class="container">
        <table id="DataTable">
            <tr>
                <th>Servis Adı</th>
                <th>Method</th>
                <th>Açıklama</th>
                <th></th>
            </tr>

            @foreach (var customer in Model)
            {



                <tr>
                    <td>@customer.Service</td>
                    <td>@customer.Type</td>
                    <td>@customer.Path</td>
                    <td>
                        <div class="btn-group">
                            <a asp-controller="Home" asp-action="Edit" asp-route-id="@customer.Id" class="button-45 btn-primary">
                                <i class="bi bi-pencil"></i>
                            </a>

                            <a asp-controller="Home" asp-action="Delete" asp-route-id="@customer.Id" class="button-45 btn-primary">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }


        </table>

    </div>

</body>
</html>

@section Scripts {
    <script src="~/js/Index.js"></script>
}
